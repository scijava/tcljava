    append buffer "$e1 $e2 $e3"
    append buffer "$e1 $e2 $e3"
    append buffer "$e1 $e2 $e3"
    append buffer "$e1 $e2 $e3"
    append buffer "$e1 $e2 $e3"
    append buffer "$e1 $e2 $e3"
