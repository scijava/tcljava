# Architecture dependent lib dir, /opt/jdk1.1.4/lib/sparc/native_threads
JAVA_ARCH_LIB		= @JAVA_ARCH_LIB@

# Shared libraries necessary at runtime
JAVA_ARCH_RUNTIME_LIBS	= @JAVA_ARCH_RUNTIME_LIBS@

