	(  echo \
	  lappend auto_path [pwd]\; \
	  cd $(TOP_DIR)/tests\; \
	  puts \"CLASSPATH is [set env\(CLASSPATH\)]\"\; \
	  puts \"CWD is [pwd]\"\; \
	  puts \"auto_path is [set auto_path]\"\; \
	  source all\; \
	  puts \"Tests done, about to call exit.\"\; \
          exit; ) | \
	$(JAVA) $(JAVA_FLAGS) -classpath $(TEST_CLASSPATH) \
		-DBUILD_DIR=$(BUILD_DIR) tcl.lang.Shell

